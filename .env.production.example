# Production Environment Configuration Example
# Copy this to .env on your production server and update the values

# App Configuration
APP_NAME="Eastern Air Logistics"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Node.js Configuration for Browser Automation
# IMPORTANT: Set this to the correct Node.js path on your production server
# To find the correct path, run: which node
# Examples:
# NODE_BINARY_PATH=/usr/local/bin/node
# NODE_BINARY_PATH=/usr/bin/node
# NODE_BINARY_PATH=/opt/node-v18/bin/node
NODE_BINARY_PATH=

# LINE API Configuration
LINE_CHANNEL_ID=
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=
LINE_NOTIFY_TOKEN=

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@easternair.com
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration
QUEUE_CONNECTION=database

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=file

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=info

# Other Services
BROADCAST_DRIVER=log
FILESYSTEM_DRIVER=local